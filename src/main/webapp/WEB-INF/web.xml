<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--Description HomeServlet-->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>ua.mushroom.hospital.servlets.HomeServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!--Description RegisterServlet-->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>ua.mushroom.hospital.servlets.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!--Description LoginServlet-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ua.mushroom.hospital.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--Description AdminPageServlet-->
    <servlet>
        <servlet-name>AdminPageServlet</servlet-name>
        <servlet-class>ua.mushroom.hospital.servlets.admin.AdminPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminPageServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <!--Description DoctorPageServlet-->
    <servlet>
        <servlet-name>DoctorPageServlet</servlet-name>
        <servlet-class>ua.mushroom.hospital.servlets.doctor.DoctorPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DoctorPageServlet</servlet-name>
        <url-pattern>/doctor</url-pattern>
    </servlet-mapping>

    <!--Description NursePageServlet-->
    <servlet>
        <servlet-name>NursePageServlet</servlet-name>
        <servlet-class>ua.mushroom.hospital.servlets.nurse.NursePageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>NursePageServlet</servlet-name>
        <url-pattern>/nurse</url-pattern>
    </servlet-mapping>

    <!--Description PatientPageServlet-->
    <servlet>
        <servlet-name>PatientPageServlet</servlet-name>
        <servlet-class>ua.mushroom.hospital.servlets.patient.PatientPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PatientPageServlet</servlet-name>
        <url-pattern>/patient</url-pattern>
    </servlet-mapping>

    <!--Description UserRegisterServlet-->
    <servlet>
        <servlet-name>UserRegisterServlet</servlet-name>
        <servlet-class>ua.mushroom.hospital.servlets.admin.UserRegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserRegisterServlet</servlet-name>
        <url-pattern>/registerUser</url-pattern>
    </servlet-mapping>

    <!--Description LogoutServlet-->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>ua.mushroom.hospital.servlets.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!--Description AboutUsServlet-->
    <servlet>
        <servlet-name>AboutUsServlet</servlet-name>
        <servlet-class>ua.mushroom.hospital.servlets.AboutUsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AboutUsServlet</servlet-name>
        <url-pattern>/aboutUs</url-pattern>
    </servlet-mapping>

    <!--Description UserDetailsServlet-->
    <servlet>
        <servlet-name>UserDetailsServlet</servlet-name>
        <servlet-class>ua.mushroom.hospital.servlets.admin.UserDetailsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserDetailsServlet</servlet-name>
        <url-pattern>/admin/user</url-pattern>
    </servlet-mapping>

    <!--Description RecordDetailsServlet-->
    <servlet>
        <servlet-name>RecordDetailsServlet</servlet-name>
        <servlet-class>ua.mushroom.hospital.servlets.admin.RecordDetailsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RecordDetailsServlet</servlet-name>
        <url-pattern>/admin/record</url-pattern>
    </servlet-mapping>

    <!--Description AddRecordServlet-->
    <servlet>
        <servlet-name>AddRecordServlet</servlet-name>
        <servlet-class>ua.mushroom.hospital.servlets.admin.AddRecordServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddRecordServlet</servlet-name>
        <url-pattern>/admin/addRecord</url-pattern>
    </servlet-mapping>

    <!--Description SortingServlet-->
    <servlet>
        <servlet-name>SortingServlet</servlet-name>
        <servlet-class>ua.mushroom.hospital.servlets.admin.SortingServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SortingServlet</servlet-name>
        <url-pattern>/admin/sorting</url-pattern>
    </servlet-mapping>

    <!--Description DispatcherServlet-->
    <filter>
        <filter-name>DispatcherFilter</filter-name>
        <filter-class>ua.mushroom.hospital.filters.DispatcherFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>DispatcherFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!---Description resources-->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>
</web-app>
